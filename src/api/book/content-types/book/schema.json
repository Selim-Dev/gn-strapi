{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Author": {
      "type": "string"
    },
    "Description": {
      "type": "blocks"
    },
    "Cover": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "Price": {
      "type": "decimal"
    },
    "OldPrice": {
      "type": "decimal"
    },
    "Rating": {
      "type": "decimal"
    },
    "ReviewCount": {
      "type": "integer"
    },
    "IsBestseller": {
      "type": "boolean"
    }
  }
}
