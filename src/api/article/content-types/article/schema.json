{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Content": {
      "type": "blocks"
    },
    "Excerpt": {
      "type": "text"
    },
    "PublishDate": {
      "type": "date"
    },
    "Author": {
      "type": "string"
    },
    "ViewCount": {
      "type": "integer"
    },
    "Image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "IsFeatured": {
      "type": "boolean"
    },
    "Tags": {
      "type": "string"
    }
  }
}
